<scroll-view id='main'>
  <view id='header'>
    <view class='main_bg' style="background-image:url({{bg}})">
      <view id='user'>
        <view id='user_logo'  bindtap='openAdmin'>
          <image src='https://t1.picb.cc/uploads/2018/08/08/Ju6enK.jpg'></image>
        </view>
        <view id='user_detail'>
          <text class='blog_title'>恶搞大王的博客\n</text>
          <text class='blog_title_desc'>Egdw's Blog</text>
        </view>
      </view>
    </view>
  </view>
  <view>
    <view class='tag_ul'>
      <view class='tag_li' wx:for="{{infos}}" wx:key="objectId">
        <view class='tag_title'>
          {{item.key}} :
        </view>
        <view class='tag_text'>
          {{item.value}}
        </view>
      </view>
    </view>
  </view>
</scroll-view>